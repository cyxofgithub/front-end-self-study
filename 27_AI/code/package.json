{
    "name": "ai-advanced-examples",
    "version": "1.0.0",
    "description": "AI 进阶应用示例：多步骤工作流、上下文记忆管理等",
    "type": "module",
    "main": "构建多步骤 AI 工作流.js",
    "scripts": {
        "workflow": "node 构建多步骤\\ AI\\ 工作流.js",
        "memory": "node 上下文记忆示例/index.js",
        "memory:scenario1": "node 上下文记忆示例/scenarios/scenario1-personal-assistant.js",
        "memory:scenario2": "node 上下文记忆示例/scenarios/scenario2-customer-service.js",
        "memory:scenario3": "node 上下文记忆示例/scenarios/scenario3-long-conversation.js",
        "tools": "node 集成外部工具示例/集成外部工具.js --interactive",
        "prompt:few-shot": "node 高级提示词技巧示例/index.js --technique=few-shot",
        "prompt:cot": "node 高级提示词技巧示例/index.js --technique=cot",
        "prompt:react": "node 高级提示词技巧示例/index.js --technique=react",
        "prompt:structured": "node 高级提示词技巧示例/index.js --technique=structured",
        "rag": "node --max-old-space-size=4096 RAG应用示例/index.js",
        "rag:scenario1": "node --max-old-space-size=4096 RAG应用示例/index.js --scenario=1",
        "rag:scenario2": "node --max-old-space-size=4096 RAG应用示例/index.js --scenario=2",
        "rag:scenario3": "node --max-old-space-size=4096 RAG应用示例/index.js --scenario=3",
        "dev:server": "node AI_Agent示例/server/server.js",
        "dev:client": "vite --config AI_Agent示例/client/vite.config.js",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "build": "vite build --config AI_Agent示例/client/vite.config.js"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "groq-sdk": "^0.8.0",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7",
        "langchain": "^0.3.0",
        "@langchain/core": "^0.3.0",
        "@langchain/openai": "^0.3.0",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "streamdown": "^1.0.0",
        "@chatscope/chat-ui-kit-react": "^2.1.1",
        "@chatscope/chat-ui-kit-styles": "^2.1.1"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "@vitejs/plugin-react": "^4.2.1",
        "vite": "^5.0.8"
    }
}
